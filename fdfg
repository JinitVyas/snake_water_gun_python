# snake water gun or stone paper sessior game using python


import random #for computer's turn
from playsound import playsound # for additional sfx

def won(comp , you ): # definition of the function  

    # for all the possible cases when computer chooses snake :    
    if(comp == 's' ):
        if(you == 'w'):
            return False
        elif(you == 'g'):
            return True
        elif(you == 's'):
            return None

    # for all the possible cases when computer chooses snake :
    if(comp == 'w' ):
        if(you == 'g'):
            return False
        elif(you == 's'):
            return True
        elif(you == 'w'):
            return None

    # for all the possible cases when computer chooses snake :
    if(comp == 'g' ):
        if(you == 's'):
            return False
        elif(you == 'w'):
            return True
        elif(you == 'g'):
            return None
comp = random.randint(1,3) #the function that chooses a random answer for computer
print("computer's turn : \n Snake (s) \n Water (w) \n Gun (g)\n")  # computer's turn
you = input ("Choose something : \n Snake (s) \n Water (w) \n Gun (g)\n") # player's turn

system = ' ' #syastem variable for converting values (1,2,3) into (s,w,g)

if comp == 1 :
    system = 's'
elif comp == 2:
    system = 'w'
elif comp == 3:
    system = 'g'

print(f"You entered : {you}")  # printing your responce
print(f"System Entered {system}") # finally exposing the random choice of computer



a = won (system,you) #calling the function
if a == None : # condition when both chose equal
    print("tie!")
elif a == True: # condition when player wins
    print("You Won ! ")
    playsound("C:\\Users\\91848\\Desktop\\jinit\\python\\snake_water_gun\\sound_fx\\win_sfx.mp3")
    
elif a == False: # condition when computer wins
    print("You Lose ! ")
    playsound("C:\\Users\\91848\\Desktop\\jinit\\python\\snake_water_gun\\sound_fx\\lose_sfx.mp3")